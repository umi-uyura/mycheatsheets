#
# apt - Advanced package tool (Ubuntu)
#

# List packages
apt list                # can be installed
apt list --installed
apt list --upgradable

# Search package
apt search <package>

# Show package detail
apt show <package>

# Install package
sudo apt install <package>

# Remove package
sudo apt remove <package>           # Configuration file remains
sudo apt remove --purge <package>   # Also delete configuration file

# Upgrade package
sudo apt update     # Update package index
sudo apt upgrade    # Upgrade packages

# Upgrade and remove packages
sudo apt full-upgrade

# 
sudo apt autoremove

# Show package dependencies
apt depends <package>
